<div class="container">
<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>

  <form class="edit-post-form">
    <div class="form-group">
      <h4>Title:</h4>
      <input name="post-title" class="form-control" type="text" value="{{post.title}}" />
    </div>
    <div class="form-group">
      <h4>Body:</h4>
      <textarea name="post-body" class="form-control" type="text">{{post.post_body}}</textarea>
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>



<script src="../public/stylesheets/javascript/edit-post.js"></script>
<script src="../public/stylesheets/javascript/delete-post.js"></script>
</div>
</div>