<article class="post">
    <div class="title">
        <div>
            <p>
                <a id="your-post-title" href="/post/{{id}}">{{title}}</a>
            </p>

            {{post_body}}

        </div>
        <div class="username-comment">
            posted by {{user.username}} on {{format_date createdAt}}
            |
            <a class="comments-number" href="/post/{{id}}">{{comments.length}} comment(s)</a>
        </div>
    </div>
</article>